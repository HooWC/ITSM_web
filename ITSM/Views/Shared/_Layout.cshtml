@using ITSM_DomainModelEntity.ViewModels
@model AllModelVM

<!doctype html>

<html lang="en"
class="layout-menu-fixed layout-compact"
data-assets-path="~/assets/"
data-template="vertical-menu-template-free"
data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport"
    content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />

    <title>HSG ITSM</title>

    <meta name="description" content="" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/assets/img/favicon/favicon.ico" />

    <!-- Fonts -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
    rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/vendor/fonts/iconify-icons.css" />

    <!-- My CSS -->
    <link rel="stylesheet" href="~/css/layout/open_menu.css" />
    <link rel="stylesheet" href="~/css/layout/menu_toggle.css" />
    <link rel="stylesheet" href="~/css/layout/logo_fix.css" />
    <link rel="stylesheet" href="~/css/Inc/inc_all.css" />
    <link rel="stylesheet" href="~/css/Inc/inc_new.css" />
    <link rel="stylesheet" href="~/css/Home/Index.css" />
    <link rel="stylesheet" href="~/css/Request/service_catalog.css" />
    <link rel="stylesheet" href="~/css/Profile/Home.css" />
    <link rel="stylesheet" href="~/css/KB/KB_Home.css" />
    <link rel="stylesheet" href="~/css/KB/KB_Read.css" />
    <link rel="stylesheet" href="~/css/KB/KB_Search.css" />
    <link rel="stylesheet" href="~/css/OtherPage/session_page.css" />
    <link rel="stylesheet" href="~/css/OtherPage/faq.css" />
    <link rel="stylesheet" href="~/css/Version/version_view.css" />
    <link rel="stylesheet" href="~/css/Inc/error_box.css" />
    <link rel="stylesheet" href="~/css/layout/navbar_override.css" />
    <link rel="stylesheet" href="~/css/Inc/show_pictures.css" />

    <!-- build:css assets/vendor/css/theme.css  -->
    <link rel="stylesheet" href="~/assets/vendor/css/core.css" />
    <link rel="stylesheet" href="~/assets/css/demo.css" />

    <!-- Vendors CSS -->
    <link rel="stylesheet" href="~/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />

    <!-- endbuild -->
    <link rel="stylesheet" href="~/assets/vendor/libs/apex-charts/apex-charts.css" />

    <!-- Helpers -->
    <script src="~/assets/vendor/js/helpers.js"></script>

</head>

<body>

    <!-- Phone Menu -->
    <div class="modal-overlay" id="menuModal">
        <div class="game-container">
            <div class="close-button" id="closeButton"></div>
            <div class="status-bar">
                <div class="level-info">EID: @Model.user.emp_id</div>
            </div>

            <div class="game-screen">
                <div class="icon-grid">
                    <!-- Row 1 -->
                    <a href="~/Home/Index" class="game-icon">
                        <i class="icon-image menu-icon tf-icons bx bx-home-smile"></i>
                        <div class="icon-name">Dashboard</div>
                    </a>
                    <div class="game-icon">
                        <a href="javascript:void(0);">
                            <i class="icon-image fa-solid fa-ban"></i>
                            <div class="icon-name">-</div>
                        </a>
                    </div>
                    <a href="~/Personal/User_Info" class="game-icon wide-icon">
                        <i class="icon-image fa-solid fa-user-shield"></i>
                        <div class="icon-name">Profile</div>
                    </a>

                    <!-- Row 2 -->
                    @if (Model.user.Role.role.ToLower() == "admin")
                    {
                        <a href="~/IncidentManagement/All" class="game-icon">
                            <i class="icon-image fa-solid fa-triangle-exclamation"></i>
                            <div class="icon-name">Incident</div>
                        </a>
                        <a href="~/Request/All" class="game-icon">
                            <i class="icon-image fa-solid fa-paper-plane"></i>
                            <div class="icon-name">Request</div>
                        </a>
                        <a href="~/Feedback/All_Feedback_List" class="game-icon wide-icon">
                            <i class="icon-image fa-solid fa-comment-dots"></i>
                            <div class="icon-name">Feedback</div>
                        </a>
                    }
                    else
                    {
                        <a href="~/IncidentManagement/User_All" class="game-icon">
                            <i class="icon-image fa-solid fa-triangle-exclamation"></i>
                            <div class="icon-name">Incident</div>
                        </a>
                        <a href="~/Request/User_All" class="game-icon">
                            <i class="icon-image fa-solid fa-paper-plane"></i>
                            <div class="icon-name">Request</div>
                        </a>
                        <a href="~/Feedback/Feedback_List" class="game-icon wide-icon">
                            <i class="icon-image fa-solid fa-comment-dots"></i>
                            <div class="icon-name">Feedback</div>
                        </a>
                    }

                    <!-- Row 3 -->
                    <a href="~/IncidentManagement/Create_Form" class="game-icon">
                        <i class="icon-image fa-solid fa-plus-circle"></i>
                        <div class="icon-name">New Incident</div>
                    </a>
                    <a href="~/Request/Service_Catalog" class="game-icon">
                        <i class="icon-image fa-solid fa-file-circle-plus"></i>
                        <div class="icon-name">New Request</div>
                    </a>
                    <a href="~/Personal/Home" class="game-icon">
                        <i class="icon-image fa-solid fa-user"></i>
                        <div class="icon-name">Personal</div>
                    </a>
                    <a href="~/Personal/Todo_List" class="game-icon">
                        <i class="icon-image fa-solid fa-list-check"></i>
                        <div class="icon-name">Todo</div>
                    </a>

                    <!-- Row 4 -->
                    <a href="~/Knowledge/KB_Home" class="game-icon wide-icon">
                        <i class="icon-image fa-solid fa-book"></i>
                        <div class="icon-name">Knowledge</div>
                    </a>
                    <a href="~/Announcement/View_Ann_List" class="game-icon wide-icon">
                        @* <div class="notification">1</div> *@
                        <i class="icon-image fa-solid fa-bell"></i>
                        <div class="icon-name">Announcement</div>
                    </a>

                    <!-- Row 5 -->
                    <a href="~/OtherPage/About_ITSM" class="game-icon">
                        <i class="icon-image fa-solid fa-circle-info"></i>
                        <div class="icon-name">About ITSM</div>
                    </a>
                    <a href="~/OtherPage/FAQ" class="game-icon">
                        <i class="icon-image fa-solid fa-question-circle"></i>
                        <div class="icon-name">FAQ</div>
                    </a>
                    <a href="~/MyVersion/View_Page" class="game-icon">
                        <i class="icon-image fa-solid fa-lightbulb"></i>
                        <div class="icon-name">Version</div>
                    </a>

                    <!-- Row 6 (bottom row) -->
                    <a href="~/OtherPage/Show_Session" class="game-icon">
                        <i class="icon-image fa-solid fa-gears"></i>
                        <div class="icon-name">Session</div>
                    </a>
                    <div class="game-icon" id="log-outBtn">
                        <a href="javascript:void(0);">
                            <i class="icon-image fa-solid fa-power-off"></i>
                            <div class="icon-name">Log Out</div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Error Box -->
    <div id="error-box-overlay" class="hidden">
        <div id="error_box_container">
            <div id="error-box">
                <div class="error-box-face2">
                    <div class="error-box-eye"></div>
                    <div class="error-box-eye error-box-right"></div>
                    <div class="error-box-mouth error-box-sad"></div>
                </div>
                <div class="error-box-shadow error-box-move"></div>
                <div class="error-box-message"><h1 class="error-box-alert">Goodbye?</h1></div>
                <button class="error-box-button-box"><h1 class="error-box-red">Delete</h1></button>
            </div>
        </div>
    </div>

    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <!-- Floating menu toggle button for collapsed state -->
            <div class="menu-toggle-button" title="Open menu">
                <a href="javascript:void(0);" class="layout-menu-toggle-close menu-link text-large ms-auto"></a>
            </div>
            <!-- Menu -->

            <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
                <div class="app-brand demo">
                    <a href="~/Home/Index" class="app-brand-link">
                        <span class="app-brand-logo demo">
                            <span class="text-primary">
                                <img class="logo_hs" src="~/assets/img/logo/hs_logo.png" />
                            </span>
                        </span>
                        <span class="app-brand-text demo menu-text fw-bold ms-2">HSG ITSM</span>
                    </a>

                    <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto"></a>
                </div>

                <div class="menu-divider mt-0"></div>

                <div class="menu-inner-shadow"></div>

                <ul class="menu-inner py-1">
                    <!-- Dashboards -->
                    <li class="menu-item" id="Dashboards_menu">
                        <a href="~/Home/Index" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-home-smile"></i>
                            <div class="text-truncate" data-i18n="Dashboards">Dashboards</div>
                        </a>
                    </li>

                    <!-- Personal -->
                    <li class="menu-item" id="Prosonal_menu">
                        <a href="javascript:void(0);" class="menu-link menu-toggle">
                            <i class="menu-icon tf-icons bx bx-layout"></i>
                            <div class="text-truncate" data-i18n="Layouts">Personal</div>
                        </a>

                        <ul class="menu-sub">
                            <li class="menu-item" id="Prosonal_menu_profile">
                                <a href="~/Personal/Home" class="menu-link">
                                    <div class="text-truncate" data-i18n="Without menu">Profile</div>
                                </a>
                            </li>
                            <li class="menu-item" id="Prosonal_menu_todo">
                                <a href="~/Personal/Todo_List" class="menu-link">
                                    <div class="text-truncate" data-i18n="Without navbar">All Todo</div>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- Apps & Pages -->
                    <li class="menu-header small text-uppercase">
                        <span class="menu-header-text">EVENTS &amp; REQUEST</span>
                    </li>

                    <!-- Incidents -->
                    <li class="menu-item" id="Incidents_menu">
                        <a href="javascript:void(0);" class="menu-link menu-toggle">
                            <i class="menu-icon tf-icons fa-solid fa-screwdriver-wrench"></i>
                            <div class="text-truncate" data-i18n="Account Settings">Incidents</div>
                        </a>
                        <ul class="menu-sub">
                            @if (Model.user.Role.role.ToLower() == "admin")
                            {
                                <li class="menu-item" id="Incidents_menu_all">
                                    <a href="~/IncidentManagement/All" class="menu-link">
                                        <div class="text-truncate" data-i18n="Connections">All</div>
                                    </a>
                                </li>
                            }

                            <li class="menu-item" id="Incidents_menu_all_user">
                                <a href="~/IncidentManagement/User_All" class="menu-link">
                                    <div class="text-truncate" data-i18n="Connections">Your Ticket</div>
                                </a>
                            </li>
                            <li class="menu-item" id="Incidents_menu_create">
                                <a href="~/IncidentManagement/Create_Form" class="menu-link">
                                    <div class="text-truncate" data-i18n="Account">Create New</div>
                                </a>
                            </li>

                            @if (@Model.user.Role.role.ToLower() == "admin")
                            {
                                <li class="menu-item" id="Incidents_menu_assigned">
                                    <a href="~/IncidentManagement/Assigned_To_Me" class="menu-link">
                                        <div class="text-truncate" data-i18n="Notifications">Assigned to me</div>
                                    </a>
                                </li>
                                <li class="menu-item" id="Incidents_menu_assigned_to_team">
                                    <a href="~/IncidentManagement/Assigned_To_Group" class="menu-link">
                                        <div class="text-truncate" data-i18n="Notifications">Assigned to us</div>
                                    </a>
                                </li>
                                <li class="menu-item" id="Incidents_menu_assigned_resolve">
                                    <a href="~/IncidentManagement/Resolved_Assigned_To_Me" class="menu-link">
                                        <div class="text-truncate" data-i18n="Notifications">Resolved by me</div>
                                    </a>
                                </li>
                                <li class="menu-item" id="Incidents_menu_assigned_closed">
                                    <a href="~/IncidentManagement/Closed_Assigned_To_Me" class="menu-link">
                                        <div class="text-truncate" data-i18n="Notifications">Closed by me</div>
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>

                    <!-- Requests -->
                    <li class="menu-item" id="Requests_menu">
                        <a href="javascript:void(0);" class="menu-link menu-toggle">
                            <i class="menu-icon tf-icons icon-base fa-solid fa-desktop"></i>
                            <div class="text-truncate" data-i18n="Account Settings">Requests</div>
                        </a>
                        <ul class="menu-sub">
                            @if (Model.user.Role.role.ToLower() == "admin")
                            {
                                <li class="menu-item" id="Requests_child_all">
                                    <a href="~/Request/All" class="menu-link">
                                        <div class="text-truncate" data-i18n="Connections">All</div>
                                    </a>
                                </li>
                            }

                            <li class="menu-item" id="Requests_child_all_User">
                                <a href="~/Request/User_All" class="menu-link">
                                    <div class="text-truncate" data-i18n="Connections">Your Ticket</div>
                                </a>
                            </li>
                            <li class="menu-item" id="Requests_child_service_catalog">
                                <a href="~/Request/Service_Catalog" class="menu-link">
                                    <div class="text-truncate" data-i18n="Connections">Hardware</div>
                                </a>
                            </li>

                            @if (Model.user.Role.role.ToLower() == "admin")
                            {
                                <li class="menu-item" id="Requests_child_assigned">
                                    <a href="~/Request/Assigned_To_Us" class="menu-link">
                                        <div class="text-truncate" data-i18n="Notifications">Assigned to us</div>
                                    </a>
                                </li>
                            }

                        </ul>
                    </li>

                    <!-- Components -->
                    <li class="menu-header small text-uppercase"><span class="menu-header-text">Components</span></li>

                    <!-- Announcement View -->
                    <li class="menu-item" id="Ann_View_menu">
                        <a href="~/Announcement/View_Ann_List" class="menu-link">
                            <i class="menu-icon tf-icons fa-solid fa-bullhorn"></i>
                            <div class="text-truncate" data-i18n="Dashboards">Announcements</div>
                        </a>
                    </li>

                    <!-- Knowledge View -->
                    <li class="menu-item" id="Knowledge_menu_u">
                        <a href="~/Knowledge/KB_Home" class="menu-link">
                            <i class="menu-icon tf-icons fa-solid fa-book-open-reader"></i>
                            <div class="text-truncate" data-i18n="Dashboards">Knowledges</div>
                        </a>
                    </li>

                    @if (Model.user.r_manager)
                    {
                        <!-- Manager User Approve View -->
                        <li class="menu-item" id="Approve_menu_u">
                            <a href="~/User/User_Approve_List" class="menu-link">
                                <i class="menu-icon tf-icons fa-solid fa-person-circle-check"></i>
                                <div class="text-truncate" data-i18n="Dashboards">Approve</div>
                            </a>
                        </li>
                    }

                    <!-- Feedback -->
                    <li class="menu-item" id="Feedback_menu">
                        <a href="javascript:void(0)" class="menu-link menu-toggle">
                            <i class="menu-icon tf-icons fa-solid fa-comments"></i>
                            <div class="text-truncate" data-i18n="Extended UI">Feedback</div>
                        </a>
                        <ul class="menu-sub">
                            @if (Model.user.Role.role.ToLower() == "admin")
                            {
                                <li class="menu-item" id="Feedback_menu_all">
                                    <a href="~/Feedback/All_Feedback_List" class="menu-link">
                                        <div class="text-truncate" data-i18n="Perfect Scrollbar">All (Admin)</div>
                                    </a>
                                </li>
                            }

                            <li class="menu-item" id="Feedback_menu_all_User">
                                <a href="~/Feedback/Feedback_List" class="menu-link">
                                    <div class="text-truncate" data-i18n="Perfect Scrollbar">All (User)</div>
                                </a>
                            </li>
                            <li class="menu-item" id="Feedback_menu_create">
                                <a href="~/Feedback/Feedback_Create" class="menu-link">
                                    <div class="text-truncate" data-i18n="Text Divider">Create New</div>
                                </a>
                            </li>
                        </ul>
                    </li>

                    @if (Model.user.Role.role.ToLower() == "admin")
                    {
                        <!-- CMDB -->
                        <li class="menu-item" id="CMDB_menu">
                            <a href="javascript:void(0)" class="menu-link menu-toggle">
                                <i class="menu-icon tf-icons fa-solid fa-notes-medical"></i>
                                <div class="text-truncate" data-i18n="Extended UI">CMDB</div>
                            </a>
                            <ul class="menu-sub">
                                <li class="menu-item" id="CMDB_menu_all">
                                    <a href="~/CMDB/CMDB_List" class="menu-link">
                                        <div class="text-truncate" data-i18n="Perfect Scrollbar">All</div>
                                    </a>
                                </li>
                                <li class="menu-item" id="CMDB_menu_create">
                                    <a href="~/CMDB/CMDB_Create" class="menu-link">
                                        <div class="text-truncate" data-i18n="Text Divider">Create New</div>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Announcement -->
                        <li class="menu-item" id="Announcement_menu">
                            <a href="javascript:void(0)" class="menu-link menu-toggle">
                                <i class="menu-icon tf-icons fa-solid fa-print"></i>
                                <div class="text-truncate" data-i18n="Extended UI">Announcement</div>
                            </a>
                            <ul class="menu-sub">
                                <li class="menu-item" id="Announcement_menu_all">
                                    <a href="~/Announcement/Ann_List" class="menu-link">
                                        <div class="text-truncate" data-i18n="Perfect Scrollbar">All</div>
                                    </a>
                                </li>
                                <li class="menu-item" id="Announcement_menu_create">
                                    <a href="~/Announcement/Ann_Create" class="menu-link">
                                        <div class="text-truncate" data-i18n="Text Divider">Create New</div>
                                    </a>
                                </li>
                                <li class="menu-item" id="Announcement_menu_import">
                                    <a href="~/Announcement/Ann_Import" class="menu-link">
                                        <div class="text-truncate" data-i18n="Text Divider">Import File</div>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }


                    <!-- Knowledge -->
                    <li class="menu-item" id="Knowledge_menu">
                        <a href="javascript:void(0)" class="menu-link menu-toggle">
                            <i class="menu-icon tf-icons fa-solid fa-book-journal-whills"></i>
                            <div class="text-truncate" data-i18n="User interface">Knowledge</div>
                        </a>
                        <ul class="menu-sub">
                            @if (Model.user.Role.role.ToLower() == "admin")
                            {
                                <li class="menu-item" id="Knowledge_menu_all">
                                    <a href="~/Knowledge/KB_List" class="menu-link">
                                        <div class="text-truncate" data-i18n="Accordion">All (Admin)</div>
                                    </a>
                                </li>
                            }
                            
                            <li class="menu-item" id="Knowledge_menu_all_user">
                                <a href="~/Knowledge/KB_List_User" class="menu-link">
                                    <div class="text-truncate" data-i18n="Accordion">All (User)</div>
                                </a>
                            </li>
                            <li class="menu-item" id="Knowledge_menu_create">
                                <a href="~/Knowledge/KB_Create" class="menu-link">
                                    <div class="text-truncate" data-i18n="Alerts">Create New</div>
                                </a>
                            </li>
                            <li class="menu-item" id="Knowledge_menu_import">
                                <a href="~/Knowledge/KB_Import" class="menu-link">
                                    <div class="text-truncate" data-i18n="Badges">Import File</div>
                                </a>
                            </li>
                        </ul>
                    </li>

                    @if (@Model.user.Role.role.ToLower() == "admin")
                    {
                        <!-- Admin -->
                        <li class="menu-header small text-uppercase"><span class="menu-header-text">Admin</span></li>

                        <!-- Role -->
                        <li class="menu-item" id="Role_menu">
                            <a href="javascript:void(0)" class="menu-link menu-toggle">
                                <i class="menu-icon tf-icons  fa-solid fa-id-card"></i>
                                <div class="text-truncate" data-i18n="Extended UI">Role</div>
                            </a>
                            <ul class="menu-sub">
                                <li class="menu-item" id="Role_menu_all">
                                    <a href="~/Role/Role_List" class="menu-link">
                                        <div class="text-truncate" data-i18n="Perfect Scrollbar">All</div>
                                    </a>
                                </li>
                                @* <li class="menu-item" id="Role_menu_create">
                                    <a href="~/Role/Role_Create" class="menu-link">
                                        <div class="text-truncate" data-i18n="Text Divider">Create New</div>
                                    </a>
                                </li> *@
                            </ul>
                        </li>

                        <!-- User -->
                        <li class="menu-item" id="User_menu">
                            <a href="javascript:void(0)" class="menu-link menu-toggle">
                                <i class="menu-icon tf-icons fa-solid fa-user-group"></i>
                                <div class="text-truncate" data-i18n="Extended UI">User</div>
                            </a>
                            <ul class="menu-sub">
                                <li class="menu-item" id="User_menu_all">
                                    <a href="~/User/User_List" class="menu-link">
                                        <div class="text-truncate" data-i18n="Perfect Scrollbar">All</div>
                                    </a>
                                </li>
                                <li class="menu-item" id="User_menu_create">
                                    <a href="~/User/UserCreate" class="menu-link">
                                        <div class="text-truncate" data-i18n="Text Divider">Create New</div>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Department -->
                        <li class="menu-item" id="Department_menu">
                            <a href="javascript:void(0)" class="menu-link menu-toggle">
                                <i class="menu-icon tf-icons fa-solid fa-users-gear"></i>
                                <div class="text-truncate" data-i18n="Extended UI">Department</div>
                            </a>
                            <ul class="menu-sub">
                                <li class="menu-item" id="Department_menu_all">
                                    <a href="~/Department/Department_List" class="menu-link">
                                        <div class="text-truncate" data-i18n="Perfect Scrollbar">All</div>
                                    </a>
                                </li>
                                <li class="menu-item" id="Department_menu_create">
                                    <a href="~/Department/Department_Create" class="menu-link">
                                        <div class="text-truncate" data-i18n="Text Divider">Create New</div>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Category -->
                        <li class="menu-item" id="Category_menu">
                            <a href="javascript:void(0)" class="menu-link menu-toggle">
                                <i class="menu-icon tf-icons fa-solid fa-table-cells-large"></i>
                                <div class="text-truncate" data-i18n="Extended UI">Category</div>
                            </a>
