    <script>
        document.addEventListener('DOMContentLoaded', function() {
          const openButton = document.querySelector('.open-button');
          const closeButton = document.getElementById('closeButton');
          const modal = document.getElementById('menuModal');
          const gameIcons = document.querySelectorAll('.game-icon');
          const body = document.body;

          // Open modal when the open button is clicked
          if (openButton) {
              openButton.addEventListener('click', function() {
                  modal.classList.add('active_open_menu');
                  body.classList.add('menu-open');

                  // Add animation delay to make it feel more polished
                  setTimeout(() => {
                      modal.style.transition = 'opacity 0.3s ease';
                  }, 500);
              });
          }

          // Close modal when the close button is clicked
          if (closeButton) {
              closeButton.addEventListener('click', function() {
                  closeMenu();
              });
          }

          // Close modal when clicking outside the game container
          if (modal) {
              modal.addEventListener('click', function(e) {
                  if (e.target === modal) {
                      closeMenu();
                  }
              });
          }

          // Function to close menu with animation
          function closeMenu() {
              // First slide out the container
              const container = modal.querySelector('.game-container');
              container.style.transform = 'translateX(100%)';

              // Then fade out the overlay
              setTimeout(() => {
                  modal.classList.remove('active_open_menu');
                  body.classList.remove('menu-open');

                  // Reset transform after animation completes
                  setTimeout(() => {
                      container.style.transform = '';
                  }, 300);
              }, 300);
          }

          // Add click effect to game icons
          gameIcons.forEach(icon => {
              icon.addEventListener('click', function() {
                  // Remove active class from all icons
                  gameIcons.forEach(i => i.classList.remove('active_open_menu'));

                  // Add active class to clicked icon
                  this.classList.add('active_open_menu');

                  // Add a subtle press animation
                  this.style.transform = 'scale(0.95)';
                  setTimeout(() => {
                      this.style.transform = 'scale(1)';
                  }, 150);
              });
          });

          // Add keyboard support (Escape key to close)
          document.addEventListener('keydown', function(e) {
              if (e.key === 'Escape' && modal && modal.classList.contains('active_open_menu')) {
                  closeMenu();
              }
          });
          
          // Menu toggle functionality
          const menuToggleButtons = document.querySelectorAll('.layout-menu-toggle');
          const floatingToggleButton = document.querySelector('.menu-toggle-button');
          
          function toggleMenu() {
              const layoutWrapper = document.querySelector('.layout-wrapper');
              layoutWrapper.classList.toggle('layout-menu-collapsed');
              
              // Also keep the data attribute for our custom styles
              const html = document.documentElement;
              const isCollapsed = html.getAttribute('data-menu-collapsed') === 'true';
              
              if (isCollapsed) {
                  html.removeAttribute('data-menu-collapsed');
              } else {
                  html.setAttribute('data-menu-collapsed', 'true');
              }
              
              // Force the menu button to be visible when collapsed
              const toggleButton = document.querySelector('.menu-toggle-button');
              if (toggleButton) {
                  if (layoutWrapper.classList.contains('layout-menu-collapsed')) {
                      toggleButton.style.display = 'block';
                  } else {
                      toggleButton.style.display = 'none';
                  }
              }
          }
          
          menuToggleButtons.forEach(button => {
              button.addEventListener('click', toggleMenu);
          });
          
          // Add click event to the floating button
          if (floatingToggleButton) {
              floatingToggleButton.addEventListener('click', toggleMenu);
          }
          
          // Set initial menu state based on screen size
          function setInitialMenuState() {
              const windowWidth = window.innerWidth;
              const layoutWrapper = document.querySelector('.layout-wrapper');
              const toggleButton = document.querySelector('.menu-toggle-button');
              
              // For mobile screens, keep it collapsed
              if (windowWidth < 1200 && layoutWrapper && !layoutWrapper.classList.contains('layout-menu-collapsed')) {
                  toggleMenu();
              }
              
              // Check if menu is already collapsed (e.g., on page reload)
              if (layoutWrapper && layoutWrapper.classList.contains('layout-menu-collapsed') && toggleButton) {
                  toggleButton.style.display = 'block';
              }
          }
          
          // Call on page load
          setInitialMenuState();
          
          // Also handle window resize
          window.addEventListener('resize', function() {
              const toggleButton = document.querySelector('.menu-toggle-button');
              const layoutWrapper = document.querySelector('.layout-wrapper');
              const layoutMenu = document.querySelector('.layout-menu');
              
              // Check if the menu is visible
              if (layoutMenu) {
                  const menuStyle = window.getComputedStyle(layoutMenu);
                  const isMenuVisible = menuStyle.display !== 'none';
                  
                  // If menu is not visible, make sure toggle button is also not visible
                  if (toggleButton && !isMenuVisible) {
                      toggleButton.style.display = 'none';
                  } else if (toggleButton && layoutWrapper && layoutWrapper.classList.contains('layout-menu-collapsed')) {
                      // Only show button if screen width is appropriate
                      if (window.innerWidth < 1200) {
                          toggleButton.style.display = 'block';
                      } else {
                          toggleButton.style.display = 'none';
                      }
                  }
              }
          });
          
          // Check menu visibility on load
          function checkMenuVisibility() {
              const toggleButton = document.querySelector('.menu-toggle-button');
              const layoutMenu = document.querySelector('.layout-menu');
              
              if (toggleButton && layoutMenu) {
                  const menuStyle = window.getComputedStyle(layoutMenu);
                  const isMenuVisible = menuStyle.display !== 'none';
                  
                  // If menu is not visible, hide toggle button
                  if (!isMenuVisible) {
                      toggleButton.style.display = 'none';
                  }
              }
          }
          
          // Call on page load
          checkMenuVisibility();
        });
    </script>

