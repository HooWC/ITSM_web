@using ITSM_DomainModelEntity.ViewModels
@model AllModelVM
@{
    ViewData["Title"] = "View_Page";
    Layout = "_Layout";
}

<style>
    .layout-page {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .dropdown-user {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 1000;
    }
</style>

<div class="nav-item navbar-dropdown dropdown-user dropdown open-button">
    <a class="nav-link dropdown-toggle hide-arrow p-0"
       href="javascript:void(0);"
       data-bs-toggle="dropdown">
        <div class="avatar avatar-online">
            <img src="@(Model.user.photo != null ? $"data:{Model.user.photo_type};base64," +  Convert.ToBase64String(Model.user.photo) :
                            Url.Content("~/img/avatar/user_avatar.jpg"))" alt="avatar" class="w-px-40 rounded-circle" />
        </div>
    </a>
</div>

<div class="version_container">
    <div class="version_entries">
        @foreach(var i in Model.MyversionList)
        {
            <div class="version_entry">
                <div class="version_title">@i.version_num</div>
                <div class="version_date">@i.release_date.ToString("yyyy-MM-dd")</div>
                <div class="version_body">
                    <p>@i.message</p>
                </div>
            </div>
        }
    </div>
</div>

