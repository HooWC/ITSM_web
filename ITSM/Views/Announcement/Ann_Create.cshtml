                    <path d="M12 20h9"></path>
                    <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path>
                </svg>
            </button>
            <button class="inc-cre-btn inc-cre-btn-icon">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="4" y1="6" x2="20" y2="6"></line>
                    <line x1="4" y1="12" x2="20" y2="12"></line>
                    <line x1="4" y1="18" x2="20" y2="18"></line>
                </svg>
            </button>
            <button class="inc-cre-btn inc-cre-btn-icon">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="1"></circle>
                    <circle cx="12" cy="5" r="1"></circle>
                    <circle cx="12" cy="19" r="1"></circle>
                </svg>
            </button>
            <button class="inc-cre-btn inc-cre-btn-submit">Submit</button>
            <div class="nav-item navbar-dropdown dropdown-user dropdown open-button">
                <a class="nav-link dropdown-toggle hide-arrow p-0"
                   href="javascript:void(0);"
                   data-bs-toggle="dropdown">
                    <div class="avatar avatar-online">
                        <img src="https://www.diydoutu.com/touxiang/20201222-1.jpg" alt class="w-px-40 h-auto rounded-circle" />
                    </div>
                </a>
            </div>
            <!-- <button class="inc-cre-btn inc-cre-btn-resolve">Resolve</button> -->
        </div>
    </header>

    <main class="inc-cre-form-wrapper">
        <form id="kbForm" class="inc-cre-incident-form">
            <div class="inc-cre-form-grid">
                <div class="inc-cre-form-column">
                    <div class="inc-cre-form-group">
                        <label for="number" class="inc-cre-form-label">Number</label>
                        <input type="text" id="number" class="inc-cre-form-control" value="INC0010005" readonly>
                    </div>
                </div>

                <div class="inc-cre-form-column">
                    <div class="inc-cre-form-group">
                        <label for="number" class="inc-cre-form-label">User Name</label>
                        <input type="text" id="number" class="inc-cre-form-control" value="INC0010005" readonly>
                    </div>
                </div>
            </div>

            <div class="inc-cre-form-group kb-editor-container">
                <label for="editor" class="inc-cre-form-label inc-cre-required">Article content</label>
                <textarea id="editor"></textarea>
            </div>
        </form>
    </main>
</div>

<!-- 添加TinyMCE脚本 -->
<script src="https://cdn.tiny.cloud/1/msh9n12ypmjq6b1f8axq4qb930bqm3h2kardtzuczvhc8yl5/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script>
    $(function () {
      var $target = $('#Announcement_menu');
      if (!$target.hasClass('active') || !$target.hasClass('open')) {
          $('.menu-item').removeClass('active open');
          $target.addClass('active open');
      }

      $('#Announcement_menu_create').addClass("active");
    });

    tinymce.init({
      selector: '#editor',
      height: 500,
      menubar: true,
      plugins: [
        'advlist autolink lists link image charmap print preview anchor',
        'searchreplace visualblocks code fullscreen',
        'insertdatetime media table paste code help wordcount'
      ],
      toolbar: 'undo redo | formatselect | bold italic backcolor | \
                alignleft aligncenter alignright alignjustify | \
                bullist numlist outdent indent | removeformat | help',
      skin: 'oxide-dark',
      content_css: 'dark',
      content_style: `
        body {
          background-color: #1e1e1e;
          color: #f8f8f8;
          font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }
        p, li, h1, h2, h3, h4, h5, h6 { color: #f8f8f8; }
        a { color: #3391ff; }
        table { border-color: #494949; }
        table td { border-color: #494949; }
        .mce-content-body:not([dir=rtl])[data-mce-placeholder]:not(.mce-visualblocks)::before {
          color: #999;
        }
      `
    });
</script>

