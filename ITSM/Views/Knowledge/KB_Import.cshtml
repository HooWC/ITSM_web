@using ITSM_DomainModelEntity.ViewModels
@model AllModelVM
@{
    ViewData["Title"] = "KB_Import";
    Layout = "_Layout";
}

<style>
    .inc-cre-product-image-container {
        margin-bottom: 1.25rem;
        border-radius: 0.375rem;
        overflow: hidden;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.15);
        max-width: 100%;
        height: auto;
    }

    .inc-cre-product-image-wrapper {
        position: relative;
        width: 100%;
        height: 0;
        padding-bottom: 25%;
        overflow: hidden;
        background-color: #121212;
    }

    .inc-cre-product-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: contain; 
        transition: transform 0.5s ease;
        background-color: #121212;
    }

    .inc-cre-product-image-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.4) 50%, transparent 100%);
        padding: 0.75rem 1.25rem;
        color: white;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    }

    .inc-cre-product-title {
        margin: 0 0 0.25rem 0;
        font-weight: 600;
        font-size: 1rem;
    }

    .inc-cre-product-description {
        margin: 0;
        opacity: 0.9;
        font-size: 0.75rem;
    }

    .inc-cre-product-image-wrapper:hover .inc-cre-product-image {
        transform: scale(1.03);
    }

    .inc-cre-product-image-wrapper.square {
        padding-bottom: 25%; 
    }

    .inc-cre-product-image.landscape {
        object-position: center;
    }

    .inc-cre-product-image.portrait {
        object-position: center;
    }

    @@media (max-width: 768px) {
        .inc-cre-product-image-wrapper {
            padding-bottom: 35%; 
        }

            .inc-cre-product-image-wrapper.square {
                padding-bottom: 35%;
            }
    }

    .file-upload-container {
        border: 2px dashed #ccc;
        border-radius: 8px;
        padding: 30px;
        text-align: center;
        margin-bottom: 20px;
        background-color: #f9f9f9;
        transition: all 0.3s ease;
    }

    .file-upload-container:hover {
        border-color: #3a86ff;
        background-color: #f0f7ff;
    }

    .file-upload-input {
        display: none;
    }

    .file-upload-label {
        display: block;
        font-size: 1.1rem;
        font-weight: 500;
        margin-bottom: 15px;
        color: #333;
        cursor: pointer;
    }

    .upload-icon {
        font-size: 48px;
        color: #3a86ff;
        margin-bottom: 15px;
        display: block;
    }

    .file-upload-btn {
        background-color: #3a86ff;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        border: none;
        font-weight: 500;
        margin-top: 15px;
        transition: background-color 0.3s ease;
    }

    .file-upload-btn:hover {
        background-color: #2563eb;
    }

    .file-info {
        margin-top: 15px;
        font-size: 0.9rem;
        color: #666;
    }

    .selected-file {
        margin-top: 15px;
        padding: 10px;
        background-color: #4f4f4f;
        border-radius: 5px;
        display: none;
    }
</style>

<div class="inc-cre-container">
    <header class="inc-cre-header">
        <div class="inc-cre-header-left">
            <button class="inc-cre-menu-button">
                <i class="fa-solid fa-plus"></i>
            </button>
            <div class="inc-cre-title-group">
                <div class="inc-cre-title">Knowledge Import</div>
                <div class="inc-cre-subtitle">New record</div>
            </div>
        </div>
        <div class="inc-cre-header-right">
            <button class="inc-cre-btn inc-cre-btn-icon" onclick="location.href='/Knowledge/KB_List'">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="4" y1="6" x2="20" y2="6"></line>
                    <line x1="4" y1="12" x2="20" y2="12"></line>
                    <line x1="4" y1="18" x2="20" y2="18"></line>
                </svg>
            </button>
            <button class="inc-cre-btn inc-cre-btn-icon" onclick="window.open('/Info/Info_Personal_Todo', '_blank')">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"></circle>
                    <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
                    <line x1="12" y1="17" x2="12.01" y2="17"></line>
                </svg>
            </button>
            <button class="inc-cre-btn inc-cre-btn-submit" onclick="document.getElementById('incidentForm').submit();">Submit</button>
            <div class="nav-item navbar-dropdown dropdown-user dropdown open-button">
                <a class="nav-link dropdown-toggle hide-arrow p-0"
                   href="javascript:void(0);"
                   data-bs-toggle="dropdown">
                    <div class="avatar avatar-online">
                        <img src="@(Model.user.photo != null ? $"data:{Model.user.photo_type};base64," +  Convert.ToBase64String(Model.user.photo) :
                            Url.Content("~/img/avatar/user_avatar.jpg"))" alt="avatar" class="w-px-40 rounded-circle" />
                    </div>
                </a>
            </div>
        </div>
    </header>

    <main class="inc-cre-form-wrapper">
        <form id="incidentForm" class="inc-cre-incident-form" action="~/Knowledge/KB_Import" method="post" enctype="multipart/form-data">
            <div class="inc-cre-form-grid">
                <div class="inc-cre-form-column">
                    <div class="inc-cre-form-group">
                        <label for="number" class="inc-cre-form-label">Number</label>
                        <input type="text" id="number" class="inc-cre-form-control" value="KB_TBD" readonly>
                    </div>
                </div>

                <div class="inc-cre-form-column">
                    <div class="inc-cre-form-group">
                        <label for="channel" class="inc-cre-form-label">Channel</label>
                        <select id="channel" name="category_id" class="inc-cre-form-control">
                            @foreach (var i in Model.CategoryList)
                            {
                                <option value="@i.id">@i.title</option>
                            }
                        </select>
                    </div>
                </div>
            </div>

            <div class="inc-cre-form-group inc-cre-short-description-group">
                <label for="name" class="inc-cre-form-label inc-cre-required">Title</label>
                <div class="inc-cre-input-with-actions">
                    <input type="text" id="name" class="inc-cre-form-control" name="title" required>
                </div>
            </div>

            <div class="inc-cre-form-group inc-cre-short-description-group">
                <label for="short_description" class="inc-cre-form-label inc-cre-required">Short description</label>
                <div class="inc-cre-input-with-actions">
                    <input type="text" id="short-description" name="short_description" class="inc-cre-form-control" required>
                </div>
            </div>

            <div class="file-upload-container">
                <i class="fa-solid fa-cloud-arrow-up upload-icon"></i>
                <label for="file" class="file-upload-label">Drag and drop files here or click to select files</label>
                <input type="file" id="file" name="file" class="file-upload-input" accept=".xlsx,.xls,.doc,.docx,.pdf,.txt,.csv,.ppt,.pptx,.zip,.rar">
                <button type="button" id="browseBtn" class="file-upload-btn">Browse files</button>
                <div class="file-info">Support (Excel, Word, PDF, PowerPoint) Various file formats</div>
                <div id="selectedFile" class="selected-file"></div>
            </div>
        </form>
    </main>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script>
    $(function () {
        var $target = $('#Knowledge_menu');
        if (!$target.hasClass('active') || !$target.hasClass('open')) {
            $('.menu-item').removeClass('active open');
            $target.addClass('active open');
        }

        $('#Knowledge_menu_import').addClass("active");

        $('#browseBtn').click(function() {            $('#file').click();        });        $('#file').change(function() {            var fileName = $(this).val().split('\\').pop();            if (fileName) {                $('#selectedFile').text('已选择文件: ' + fileName).show();                $('.file-upload-container').css('border-color', '#3a86ff');            } else {                $('#selectedFile').hide();                $('.file-upload-container').css('border-color', '#ccc');            }
        });

        $('.file-upload-container').on('dragover', function(e) {
            e.preventDefault();
            e.stopPropagation();
            $(this).css('border-color', '#3a86ff');
            $(this).css('background-color', '#f0f7ff');
        });

        $('.file-upload-container').on('dragleave', function(e) {
            e.preventDefault();
            e.stopPropagation();
            $(this).css('border-color', '#ccc');
            $(this).css('background-color', '#f9f9f9');
        });

        $('.file-upload-container').on('drop', function(e) {
            e.preventDefault();
            e.stopPropagation();
            $(this).css('border-color', '#3a86ff');
            
            var files = e.originalEvent.dataTransfer.files;
            if (files.length) {
                $('#fileUpload')[0].files = files;
                var fileName = files[0].name;
                $('#selectedFile').text('File selected: ' + fileName).show();
            }
        });

        $('#submitBtn, .inc-cre-btn-submit').click(function() {            if ($('#file')[0].files.length === 0) {                alert('请选择一个文件');                return;            }            $('#incidentForm').submit();        });
    });
</script>

