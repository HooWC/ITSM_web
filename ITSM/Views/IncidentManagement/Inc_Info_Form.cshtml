                {
                    <label for="description" class="inc-cre-form-label inc-cre-required">Description</label>
                    <textarea id="description" autocomplete="off" name="describe" class="inc-cre-form-control inc-cre-description-textarea" rows="5">@Model.incident.describe</textarea>
                }
                else
                {
                    <label for="description" class="inc-cre-form-label">Description</label>
